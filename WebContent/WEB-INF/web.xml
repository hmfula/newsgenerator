<?xml version="1.0" encoding="UTF-8"?>

<web-app>

	<display-name>Wikipulse Application</display-name>
	<description>
		SOON TO COME
	</description>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<filter>
		<filter-name>SparkFilter</filter-name>
		<filter-class>spark.servlet.SparkFilter</filter-class>
		<init-param>
			<param-name>applicationClass</param-name>
			<param-value>com.coin2012.wikipulse.api.WikipulseResource</param-value>
